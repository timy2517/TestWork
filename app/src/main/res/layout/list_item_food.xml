<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/list_item_food_image"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_food_name"
        android:text="name"
        android:padding="4dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/list_item_food_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_food_weight"
        android:padding="4dp"
        android:text="weight"
        android:layout_below="@id/list_item_food_name"
        android:layout_toRightOf="@id/list_item_food_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_food_price"
        android:padding="4dp"
        android:text="price"
        android:layout_below="@id/list_item_food_name"
        android:layout_alignParentRight="true"/>
</RelativeLayout>